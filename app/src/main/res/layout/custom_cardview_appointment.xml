<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view_appointment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:clickable="true"

    card_view:cardBackgroundColor="@color/pure_white"
    card_view:cardCornerRadius="0dp"
>
    <!--android:foreground="@drawable/ripple_button"-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2">

            <TextView
                android:id="@+id/textNameLetter"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="15dp"
                android:background="@drawable/shape_appoint_btn"
                android:clickable="true"
                android:gravity="center"
                android:text="A"
                android:textColor="@color/pure_white"
                android:textSize="20sp"

                android:textStyle="bold"

            />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:orientation="horizontal"
                android:weightSum="1">


                <TextView
                    android:id="@+id/textContactPerson"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="0.6"
                    android:singleLine="true"
                    android:textColor="@color/primary_text"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="0.4"
                    android:text="21-Apr-2016"

                    android:textColor="@color/secondary_text"

                />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:orientation="horizontal"
                android:weightSum="1">


                <TextView
                    android:id="@+id/textCompanyNameApp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="0.6"
                    android:singleLine="true"
                    android:textColor="@color/primary_text"
                    android:textSize="13sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="0.4"

                    android:text="05:30"
                    android:textColor="@color/secondary_text"
                />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:weightSum="1">


                <TextView
                    android:id="@+id/textComments"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="0.9"
                    android:paddingTop="2dp"
                    android:singleLine="true"
                    android:textColor="@color/primary_text"
                    android:textSize="12sp"/>


                <TextView
                    android:id="@+id/textMobileImage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="0.6"
                    android:drawableRight="@drawable/layer_shape_meeting"
                    android:gravity="right"
                    android:paddingBottom="2dp"
                    android:paddingRight="10dp"
                    android:visibility="gone"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>