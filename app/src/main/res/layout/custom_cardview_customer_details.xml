<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6sp"
    card_view:cardBackgroundColor="@color/pure_white"
    card_view:cardCornerRadius="0sp"
    card_view:cardUseCompatPadding="true"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:gravity="top">

        <ImageView
            android:id="@+id/imgSummaryLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="7sp"
            android:scaleType="centerCrop"
            android:src="@drawable/layer_shape_add_contact"/>

        <TextView
            android:id="@+id/textLastSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center|bottom"
            android:paddingTop="35sp"
            android:text="Ledger Account Details"
            android:textColor="@color/primary_text"
            android:textSize="15sp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>