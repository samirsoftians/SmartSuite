<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20sp"
    android:layout_marginRight="20sp"
    android:layout_marginTop="50dp"
    android:orientation="vertical"
    android:paddingTop="20sp">

    <TextView
        android:id="@+id/textCustomerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:textColor="@color/card4"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="15sp"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Date"
            android:textColor="@color/primary"/>

        <RelativeLayout
            android:id="@+id/relativeStartDate"
            android:layout_width="180sp"
            android:layout_height="50sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="5sp"
            android:layout_weight="0.5"
            android:background="@color/primary_dark">


            <ImageView
                android:id="@+id/imgCalendarStartDate"
                android:layout_width="wrap_content"
                android:layout_height="60sp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10sp"
                android:src="@drawable/ic_date_range"/>

            <TextView
                android:id="@+id/textStartDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40sp"
                android:layout_toRightOf="@id/imgCalendar"
                android:textColor="@color/pure_white"
                android:textStyle="bold"
            />


        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25sp"
            android:text="End Date"
            android:textColor="@color/primary"/>

        <RelativeLayout
            android:id="@+id/relativeEndDate"
            android:layout_width="180sp"
            android:layout_height="50sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="5sp"
            android:layout_weight="0.5"
            android:background="@color/primary_dark">


            <ImageView
                android:id="@+id/imgCalendarEndDate"
                android:layout_width="wrap_content"
                android:layout_height="60sp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10sp"
                android:src="@drawable/ic_date_range"/>

            <TextView
                android:id="@+id/textEndDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40sp"
                android:layout_toRightOf="@id/imgCalendar"
                android:textColor="@color/pure_white"
                android:textStyle="bold"/>
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnGo"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40sp"
        android:background="@drawable/layer_list_take_followup"
        android:foreground="@drawable/ripple_button"
        android:gravity="center"
        android:text="@string/go_button"
        android:textColor="@color/primary_light"
        android:textSize="20sp"/>

</LinearLayout>