<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view_last_followup"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:clickable="true"
    card_view:cardBackgroundColor="@color/pure_white"
    card_view:cardCornerRadius="0dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        >

            <TextView
                android:id="@+id/textNameLetter"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_gravity="center_vertical"
                android:layout_margin="15dp"
                android:background="@drawable/shape_appoint_btn"
                android:clickable="true"
                android:gravity="center"
                android:text="A"
                android:textColor="@color/pure_white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="gone"

            />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="10sp"
            android:paddingLeft="5sp"
            android:paddingTop="10sp"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:orientation="horizontal"
                android:weightSum="1">


                <TextView
                    android:id="@+id/textContactPersonFollow"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="0.7"
                    android:singleLine="true"
                    android:textColor="@color/primary_text"
                    android:textSize="14sp"
                    android:textStyle="bold"
                />

                <TextView
                    android:id="@+id/textFollowupDate"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="0.3"
                    android:text="21-Apr-2016"
                    android:textColor="@android:color/darker_gray"

                />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:orientation="horizontal"
                android:weightSum="1">


                <TextView
                    android:id="@+id/textStatus"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="0.7"
                    android:singleLine="true"
                    android:text="Status"
                    android:textColor="@color/primary_text"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/textFollowupTime"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="0.3"

                    android:text="05:30"
                    android:textColor="@android:color/darker_gray"
                />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:weightSum="1">


                <TextView
                    android:id="@+id/textPreparation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="0.7"
                    android:paddingTop="2sp"
                    android:singleLine="true"
                    android:text="Preparation"
                    android:textColor="@color/primary_text"
                    android:textSize="12sp"/>


                <TextView
                    android:id="@+id/textFollowupType"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="0.3"
                    android:singleLine="true"
                    android:text="Action Points"
                    android:textColor="@color/primary_dark"
                />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>